<nav>
  <% if Current.user.present? %>
    <div class="d-flex gap-4 align-items-center">
      <%= link_to "Home", root_path, class: "btn btn-primary" %>
      <%= link_to "About", "#", class: "btn btn-secondary" %>
      <%= link_to "Contact", "#", class: "btn btn-secondary" %>
      <%= render Common::Button::BtnComponent.new(
        builder: "link_to",
        path: session_path,
        method: :delete,
        style: "light",
        other_styles: "ms-auto",
        data: { turbo_method: :delete }
      ) do %>
        Sign out
      <% end %>
    </div>
  <% else %>
    <div class="d-flex gap-2">
      <%= link_to "Sign in", "#", class: "btn btn-primary" %>
      <%= link_to "Sign up", new_registrations_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</nav>